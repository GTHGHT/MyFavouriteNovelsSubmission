<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyFavouriteNovels" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="toolbarStyle">@style/Theme.MyFavouriteNovels.ToolBar</item>
    </style>

    <style name="Theme.MyFavouriteNovels.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.MyFavouriteNovels</item>
        <item name="windowSplashScreenBackground">#6A3DE8</item>
    </style>



    <style name="Theme.MyFavouriteNovels" parent="Base.Theme.MyFavouriteNovels" />

    <style name="Theme.MyFavouriteNovels.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyFavouriteNovels.ToolBar" parent="Widget.Material3.Toolbar" >
        <item name="android:background">?colorPrimary</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="Theme.MyFavouriteNovels.DetailHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MyFavouriteNovels.DetailContent">
        <item name="android:textSize">14sp</item>
    </style>

</resources>